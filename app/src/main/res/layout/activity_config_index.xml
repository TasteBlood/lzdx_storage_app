<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="model"
            type="com.cloudcreativity.storage.ui.config.ConfigModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/tlb_config"
            app:title="设备配置"
            app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
            app:titleTextColor="@color/white"
            android:elevation="3dip"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />
        <LinearLayout
            android:id="@+id/ll_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dip"
            android:layout_marginTop="5dip"
            android:background="@color/white"
            android:onClick="@{(v)->model.onClick(v)}"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="蓝牙电子秤"
                android:textSize="16sp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_balance_status"
                android:text="未连接"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textColor="@color/gray_414141"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_printer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dip"
            android:layout_marginTop="5dip"
            android:background="@color/white"
            android:onClick="@{(v)->model.onClick(v)}"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="蓝牙打印机"
                android:textSize="16sp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_printer_status"
                android:text="未连接"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textColor="@color/gray_414141"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</layout>
